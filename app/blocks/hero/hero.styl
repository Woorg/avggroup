.hero
	display block
	min-height 850px
	background-color #005ab7
	&__in
		@extends .in
		padding-top 248px
		padding-bottom 95px
		font-family $ptS
		clearfix()
	&__w
		width ratio-percentage(486,1140)
		float left
	&__img
		margin-top remify(-85px)
		float right
		width ratio-percentage(650,1140)
		height remify(592px)
		background url('../images/hero-img.png') 0 0 / cover no-repeat
	&__title
		margin-bottom 13px
		font-size 48px
		line-height 54px
		color #FFF
	&__services
		margin-bottom 76px
		font-size 0
	&__item
		position relative
		margin-right 5px
		padding-left 10px
		display inline-block
		vertical-align top
		font-size 24px
		color #87B4E3
		&:first-child
			padding-left 0
		&:last-child
			margin-right 0
		&:after
			position absolute
			content ""
			top 50%
			left 0
			margin-top -2px
			width 6px
			height 6px
			background-color #87b4e3
			border-radius 50%
		&:first-child
			&:after
				display none
	&__call
		margin-bottom 70px
	&__note
		color #87B4E3
		line-height 17px
