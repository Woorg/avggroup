.hero
	display block
	min-height 850px
	background-color #005ab7
	&__in
		@extends .in
		padding-top 255px
		padding-bottom 165px
		font-family $ptS
		clearfix()
	&__w
		max-width 486px
		float left
	&__img
		// margin-top 163px
		float right
		max-width 650px
		width 650px
		height 592px
		background url('../images/hero-img.png') 0 0 / cover no-repeat
	&__title
		margin-bottom 23px
		font-size 48px
		color #FFF
	&__services
		margin-bottom 82px
		font-size 0
	&__item
		position relative
		margin-right 5px
		padding-left 10px
		display inline-block
		vertical-align top
		font-size 24px
		color #87B4E3
		&:last-child
			margin-right 0
		&:after
			position absolute
			content ""
			top 50%
			left 0
			margin-top -2px
			width 6px
			height 6px
			background-color #87b4e3
			border-radius 50%
		&:first-child
			&:after
				display none
	&__call
		margin-bottom 72px
	&__note
		color #87B4E3

